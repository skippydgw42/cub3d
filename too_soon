// Pour afficher en 3D
void	ft_three_dimension(t_mlx *mlx, double length, int pos)
{
	//while (rayon)
	//{
		//print mur 1/2 screen et sol 1/2 screen
		//if (length == ?)
			//print mur + || - petit (utiliser thales)
		//rayon suivant;
	//}
	(void)length;
	int	y;

	y = 0;
	while (y < HEIGHT_WINDOW)
	{
		if (y < HEIGHT_WINDOW / 2)
			my_mlx_pixel_put(&mlx->img, pos, y, ft_rgb(255, 0, 0));
		else
			my_mlx_pixel_put(&mlx->img, pos, y, ft_rgb(0, 255, 0));
		y++;
	}
}